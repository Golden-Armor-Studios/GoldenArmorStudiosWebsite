{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/submitTeamApplication",
        "function": "submitTeamApplication"
      },
      {
        "source": "/createStripePaymentIntent",
        "function": "createStripePaymentIntent"
      },
      {
        "source": "/createStripeSetupIntent",
        "function": "createStripeSetupIntent"
      },
      {
        "source": "/recordDonation",
        "function": "recordDonation"
      },
      {
        "source": "/getUserTransactions",
        "function": "getUserTransactions"
      },
      {
        "source": "/listUsers",
        "function": "listUsers"
      },
      {
        "source": "/updateUserGroups",
        "function": "updateUserGroups"
      },
      {
        "source": "/deleteUserAccount",
        "function": "deleteUserAccount"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
